<% layout('../layout') -%>

<%= "Welcome " + currentUser.name %>
<h1>Listings</h1>

<table class="table table-bordered" id="main-table">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% listings.forEach(function(listing, index) { %>
    <tr>
      <th scope="row"><%= index + 1 %></th>
      <td><a href=<%= "/bookings/new?id=" + listing.id %>><%= listing.name %></a></td>
      <td><%= listing.description %></td>
      <td><%= listing.price %></td>
    </tr>
    <% });%>
  </tbody>
</table>
