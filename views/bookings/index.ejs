<% layout('../layout') -%>
<h1>Bookings</h1>

<table class="table table-bordered" id="main-table">
  <thead>
    <tr>
      <th>#</th>
      <th>Listing name</th>
      <th>Booked from</th>
      <th>Booked to</th>
      <th>Total price</th>
      <th>Confirmed</th>
    </tr>
  </thead>
  <tbody>
    <% bookings.forEach(function(booking, index) { %>
    <tr>
      <th scope="row"><%= index + 1 %></th>
      <td><%= booking.listing %></td>
      <td><%= booking.bookedFrom %></td>
      <td><%= booking.bookedTo %></td>
      <td><%= booking.totalPrice %></td>
      <td><%= booking.confirmed %></td>
    </tr>
    <% });%>
  </tbody>
</table>
